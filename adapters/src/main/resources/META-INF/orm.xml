<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
   http://java.sun.com/xml/ns/persistence/orm_1_0.xsd"
                 version="1.0">

    <description>XML Mapping file</description>

    <entity class="com.tommannson.flagmanager.deploy.DeployedLevelSnapshot" access="FIELD">
        <table name="deployed_levels"/>
        <attributes>
            <id name="id"/>
            <basic name="name"/>
            <basic name="description"/>
        </attributes>
    </entity>

    <entity class="com.tommannson.flagmanager.deploy.DeployFeatureSnapshot" access="FIELD">
        <table name="deployable_features"/>
        <attributes>
            <id name="id" />
            <basic name="flagId"/>
            <basic name="flagName"/>
            <many-to-one name="deployLevel" fetch="EAGER">
                <join-column name="deployed_level_id"/>
            </many-to-one>
        </attributes>
    </entity>

    <entity class="com.tommannson.flagmanager.flags.CodeFlagSnapshot" access="FIELD">
        <table name="code_flags"/>
        <attributes>
            <id name="id"/>
            <basic name="description"/>
            <basic name="name"/>
        </attributes>
    </entity>

</entity-mappings>